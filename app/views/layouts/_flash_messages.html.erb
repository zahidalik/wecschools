<% if !!flash[:success] %>
  <div class="px-4 py-3 bg-green-300 text-green-700 flex justify-center items-center animate__animated animate__bounceInDown">
    <%= flash[:success] %>
  </div>
<% end %>


<% if !!flash[:danger] %>
  <div class="px-4 py-3 bg-red-300 text-red-700 flex justify-center items-center animate__animated animate__bounceInDown">
    <%= flash[:danger] %>
  </div>
<% end %>
