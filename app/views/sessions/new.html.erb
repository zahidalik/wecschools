<% provide(:button_name, "Log in") %>

<div class="min-h-screen flex justify-center items-start login-background">
  <div class="mt-32 md:w-2/3 px-16 py-16 rounded-lg bg-gray-50 opacity-90 flex flex-col justify-center items-center space-y-2 md:space-y-5">
    <div class="text-gray-700 text-3xl md:text-4xl font-light">Log in</div>
    <%= form_for(:session, url: login_path, method: :post, html: { class: "flex flex-col items-center space-y-7" }) do |f| %>
      <div class="flex flex-col md:flex-row justify-center md:items-baseline md:space-x-3 space-y-2">
        <%= f.label :username, class: "text-lg md:text-xl font-light text-gray-700" %>
        <%= f.text_field :username, placeholder: "someone123", class: "text-sm md:text-lg px-1 py-1 md:px-2 md:py-1 text-gray-700 border border-slate-400 rounded-lg shadow focus:outline-none focus:border-blue-400" %>
      </div>

      <div class="flex flex-col md:flex-row justify-center md:items-baseline md:space-x-3 space-y-2">
        <%= f.label :password, class: "text-lg md:text-xl font-light text-gray-700" %>
        <%= f.password_field :password, class: "text-sm md:text-lg px-1 py-1 md:px-2 md:py-1 text-gray-700 border border-slate-400 rounded-lg shadow focus:outline-none focus:border-blue-400" %>
      </div>

      <%= f.submit yield(:button_name), class: "w-full px-2 py-1 bg-blue-600 text-lg text-gray-50 rounded hover:bg-blue-800 transition delay-15" %>
    <% end %>
  </div>
</div>