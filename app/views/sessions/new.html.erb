<% provide(:button_name, "Log in") %>

<div class="min-h-screen flex justify-center items-start login-background">
  <div class="mt-40 w-1/3 px-16 py-8 rounded-lg bg-gray-50 opacity-90 flex flex-col justify-center items-center space-y-5">
    <div class="text-gray-700 text-3xl font-light">Log in</div>
    <%= form_for(:sessions, url: login_path, method: :post, html: { class: "flex flex-col items-center space-y-7" }) do |f| %>
      <div class="flex justify-center items-center space-x-3">
        <%= f.label :username, class: "text-lg font-light text-gray-700" %>
        <%= f.text_field :username, placeholder: "someone123", class: "px-2 py-1 text-gray-700 border border-slate-400 rounded-lg shadow focus:outline-none focus:border-blue-400" %>
      </div>

      <div class="flex justify-center items-center space-x-3">
        <%= f.label :password, class: "text-lg font-light text-gray-700" %>
        <%= f.password_field :password, class: "px-2 py-1 text-gray-700 border border-slate-400 rounded-lg shadow focus:outline-none focus:border-blue-400" %>
      </div>

      <%= f.submit yield(:button_name), class: "w-2/3 px-2 py-1 bg-blue-600 text-lg text-gray-50 rounded hover:bg-blue-800 transition delay-15" %>
    <% end %>
  </div>
</div>